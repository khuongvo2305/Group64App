<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textTen"
        android:layout_width="410dp"
        android:layout_height="41dp"
        android:layout_below="@+id/imageHinh"
        android:text="Tên"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMota"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:layout_below="@+id/textTen"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:text="Mô tả"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTen" />

    <TextView
        android:id="@+id/soluong"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:text="Số lượng"
        app:layout_constraintStart_toEndOf="@+id/textMota"
        app:layout_constraintTop_toBottomOf="@+id/textTen" />

    <TextView
        android:id="@+id/tongtien"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:text="tongtien "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMota" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="62dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Đơn giá:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTen" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Số lượng:"
        app:layout_constraintStart_toEndOf="@+id/textMota"
        app:layout_constraintTop_toBottomOf="@+id/textTen" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Thành tiền:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

</android.support.constraint.ConstraintLayout>